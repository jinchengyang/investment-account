.summary-card {
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
}

.summary-label {
  font-size: 26rpx;
  color: #64748b;
}

.total-assets {
  font-size: 56rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.sub-label {
  font-size: 22rpx;
  color: #94a3b8;
  margin-bottom: 8rpx;
}

.sub-value {
  font-size: 32rpx;
  font-weight: 600;
}

.section-header {
  margin: 40rpx 10rpx 20rpx;
  font-size: 30rpx;
}

.account-name {
  font-size: 32rpx;
  font-weight: bold;
}

.update-time {
  font-size: 20rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

.update-btn {
  margin: 0 !important;
  background: #fff !important;
  border: 1rpx solid #e2e8f0 !important;
  color: #64748b !important;
  border-radius: 40rpx !important;
  font-weight: normal !important;
  font-size: 24rpx !important;
}

.account-grid {
  display: grid;
  grid-template-columns: 1.2fr 1fr 1fr;
}

.grid-label {
  font-size: 20rpx;
  color: #94a3b8;
  margin-bottom: 6rpx;
}

.grid-value {
  font-size: 26rpx;
  font-weight: bold;
}

.text-right { text-align: right; }

.add-account {
  height: 100rpx;
  border: 2rpx dashed #e2e8f0;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #94a3b8;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.plus-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.mb-20 { margin-bottom: 20rpx; }
.mt-40 { margin-top: 40rpx; }
.mb-30 { margin-bottom: 30rpx; }
